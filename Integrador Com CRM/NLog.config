<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" internalLogLevel="Debug" internalLogFile="C:/Logs/nlog-internal.txt">
	<targets>
		<!-- Define um target de arquivo com FileShare.Write habilitado -->
		<target xsi:type="File" name="logfile"
				fileName="${basedir}/Logs/log-${shortdate}.txt"
				layout="${longdate} | ${level:uppercase=true} | ${message} | ${exception:format=tostring}"
				keepFileOpen="false"
				concurrentWrites="true"
				fileShare="Write" />
	</targets>

	<rules>
		<!-- Define uma regra para registrar todos os níveis de log no arquivo -->
		<logger name="*" minlevel="Info" writeTo="logfile" />
	</rules>
</nlog>

		